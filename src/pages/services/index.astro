---
import { Image } from 'astro:assets'
import Layout from '../../layouts/Layout.astro'
import ChevronRight from '../../assets/svg/chevron-right.svg'
import Calendar from '../../assets/svg/calendar.svg'
import Clock from '../../assets/svg/clock.svg'

const services = [
  {
    id: 1,
    title: 'Mobile Detailing',
    description:
      'Experience premium detailing wherever you are. Our mobile unit brings state-of-the-art equipment directly to your location, delivering showroom-quality results without the hassle of traveling to a shop. Perfect for busy professionals who demand excellence.',
    image: '/images/services/car-detailing.jpg',
    alt: 'Mobile Detailing Service',
    href: '/services/mobile-detailing',
    priceFrom: '$110',
  },
  {
    id: 2,
    title: 'Ceramic Coating',
    description:
      "Shield your investment with cutting-edge nanotechnology protection. Our premium ceramic coatings create an invisible armor that repels dirt, water, and UV rays while enhancing your vehicle's natural shine for years to come. The ultimate in paint preservation.",
    image: '/images/services/ceramic-coating.jpg',
    alt: 'Ceramic Coating Service',
    href: '/services/ceramic-coating',
    priceFrom: '$1000',
  },
  {
    id: 3,
    title: 'Paint Correction',
    description:
      "Restore your vehicle's finish to factory perfection with our advanced multi-stage correction process. Using precision techniques and professional-grade compounds, we eliminate swirl marks, scratches, and imperfections to reveal a mirror-like finish that turns heads.",
    image: '/images/services/paint-correction.jpg',
    alt: 'Paint Correction Service',
    href: '/services/paint-correction',
    priceFrom: '$595',
  },
]

const individualServices = [
  {
    id: 1,
    title: 'Steam and Shampoo Carpet',
    description:
      'Intensive steam treatment and specialized cleaning for vehicle carpets to eliminate dirt and bacteria.',
    image: '/images/services/individual/steam-and-shampoo-carpet.jpg',
    alt: 'Carpet Steam Cleaning Service',
    price: '$150',
    duration: '2 hours',
    badge: '',
  },
  {
    id: 2,
    title: 'Headlight Restoration',
    description:
      'Transform clouded and yellowed headlight lenses back to crystal clear condition for enhanced night visibility.',
    image: '/images/services/individual/headlight-restoration.jpg',
    alt: 'Headlight Restoration Service',
    price: '$120',
    duration: '1 hour',
    badge: 'Add-on',
  },

  {
    id: 3,
    title: 'Water Spot Removal',
    description:
      'Professional removal of hard water marks and mineral buildup from all vehicle surfaces.',
    image: '/images/services/individual/water-spot-removal.jpg',
    alt: 'Water Spot Removal Service',
    price: '$160',
    duration: '1 hr',
    badge: 'Add-on',
  },
  {
    id: 4,
    title: 'Steam and Shampoo Seats',
    description:
      'Complete steam cleaning and conditioning service for fabric and leather upholstery to restore original beauty.',
    image: '/images/services/individual/steam-and-shampoo-seats.jpg',
    alt: 'Seat Steam Cleaning Service',
    price: '$150',
    duration: '2 hours',
    badge: '',
  },

  {
    id: 5,
    title: 'Exterior Black Trim Restoration',
    description:
      'Professional restoration of faded exterior plastic components to their original factory finish.',
    image: '/images/services/individual/exterior-black-trim-restoration.jpg',
    alt: 'Black Trim Restoration Service',
    price: '$45',
    duration: '30 minutes',
    badge: 'Add-on',
  },
  {
    id: 6,
    title: 'Pet Hair Extraction',
    description:
      'Complete removal of pet fur from all interior areas using professional-grade extraction equipment.',
    image: '/images/services/individual/pet-hair-extraction.jpg',
    alt: 'Pet Hair Extraction Service',
    price: '$55',
    duration: '1 hour',
    badge: 'Add-on',
  },
  {
    id: 7,
    title: 'Engine Bay Cleaning',
    description:
      'Thorough degreasing and detailed cleaning of the engine compartment to enhance appearance and help identify potential issues sooner.',
    image: '/images/services/individual/engine-bay-cleaning.jpg',
    alt: 'Engine Bay Cleaning Service',
    price: '$90',
    duration: '1 hr',
    badge: 'Add-on',
  },
]
---

<Layout
  title='Our Services - Driven Stage Detailing'
  description='Explore our comprehensive range of professional auto detailing services, from mobile detailing to paint correction and ceramic coating.'
>
  <!-- Hero Section -->
  <section class='first-section py-20 bg-gradient-secondary'>
    <article class='container mx-auto px-4 text-center'>
      <h1
        class='text-4xl md:text-5xl lg:text-6xl font-bold font-barlow text-primary mb-6 leading-tight'
      >
        Our <span class='text-gradient-primary'>Premium Services</span>
      </h1>
      <p
        class='text-xl text-foreground max-w-3xl mx-auto leading-relaxed text-pretty'
      >
        From comprehensive mobile detailing to specialized paint correction and
        ceramic coatings, we offer the complete range of services to keep your
        vehicle looking its absolute best.
      </p>
    </article>
  </section>

  <!-- Main Services Section -->
  <section class='py-20'>
    <div
      class='container mx-auto px-4 grid md:grid-cols-2 lg:grid-cols-3 gap-8'
    >
      {
        services.map((service) => (
          <article class='bg-light rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 group border border-zinc-200'>
            <div class='relative h-64 overflow-hidden'>
              <Image
                class='w-full h-full object-cover group-hover:scale-105 transition-transform duration-300'
                width={256}
                height={256}
                src={service.image}
                alt={service.alt}
                loading='lazy'
              />
              <div class='absolute top-4 left-4'>
                <span class='bg-black/80 backdrop-blur-sm text-white px-4 py-2 rounded-full text-sm font-semibold'>
                  From {service.priceFrom}
                </span>
              </div>
            </div>

            <div class='p-6'>
              <h3 class='text-3xl font-bold text-dark mb-4 font-barlow'>
                {service.title}
              </h3>
              <p class='text-foreground leading-relaxed text-pretty mb-8'>
                {service.description}
              </p>

              <a
                href={service.href}
                class='btn btn-primary btn-base w-full group/detail'
              >
                View Details
                <ChevronRight class='ml-2 size-4.5 group-hover/detail:translate-x-1 transition-transform duration-200' />
              </a>
            </div>
          </article>
        ))
      }
    </div>
  </section>

  <!-- Individual Services Section -->
  <section class='py-20 bg-muted-blue'>
    <div class='container mx-auto px-4 text-center'>
      <h2
        class='text-3xl md:text-4xl font-bold text-gradient-primary mb-4 font-barlow'
      >
        Individual Services
      </h2>
      <p class='text-lg text-foreground max-w-2xl mx-auto'>
        Specialized add-on services to address specific needs and enhance your
        detailing experience.
      </p>

      <div class='grid sm:grid-cols-2 lg:grid-cols-3 gap-6 xl:gap-12 mt-10'>
        {
          individualServices.map((service) => (
            <article class='relative group rounded-2xl bg-white/95 border border-neutral-200 shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden hover:-translate-y-1'>
              <div class='relative h-56 overflow-hidden'>
                <Image
                  class='w-full h-full object-cover rounded-t-2xl'
                  width={256}
                  height={156}
                  src={service.image}
                  alt={service.alt}
                  loading='lazy'
                />
                <div class='absolute inset-0 bg-gradient-to-t from-black/60 via-black/10 to-transparent opacity-70 group-hover:opacity-80 transition-opacity duration-300' />
                {service.badge && (
                  <div class='absolute top-3 left-3'>
                    <span class='bg-black/70 backdrop-blur-sm text-white/95 px-3 py-1.5 rounded-full text-sm font-semibold tracking-wide shadow-md'>
                      {service.badge}
                    </span>
                  </div>
                )}
              </div>

              <div class='p-5 flex flex-col h-[200px] md:h-[210px] text-left'>
                <h3 class='text-lg md:text-xl xl:text-2xl font-bold text-dark font-barlow mb-2 group-hover:text-primary transition-colors'>
                  {service.title}
                </h3>
                <p class='text-foreground/90 text-sm md:text-[15px] leading-relaxed mb-4 line-clamp-4'>
                  {service.description}
                </p>
                <div class='mt-auto flex items-center justify-between pt-2 border-t border-neutral-200'>
                  <div class='flex items-center text-sm text-foreground/70 font-medium'>
                    <Clock class='size-5 mr-1.5 text-accent' />
                    {service.duration}
                  </div>
                  <span class='text-xl font-bold text-gradient-accent font-barlow'>
                    {service.price}
                  </span>
                </div>
              </div>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section
    class='py-20 bg-dark bg-gradient-to-b from-primary/25 via-dark to-dark'
  >
    <div class='container mx-auto px-6 text-center'>
      <h2 class='text-3xl md:text-4xl font-bold font-barlow text-white mb-6'>
        Ready to <span class='text-gradient-primary'>Transform</span> Your Vehicle?
      </h2>
      <p class='text-muted text-lg mb-8 max-w-2xl mx-auto'>
        Book your mobile detailing service today and experience the convenience
        of premium car care at your doorstep.
      </p>
      <button
        type='button'
        id='schedule-btn-bottom'
        class='btn btn-primary btn-base mr-4'
      >
        Schedule Now
        <Calendar class='ml-2 w-5 h-5' />
      </button>
    </div>
  </section>
</Layout>
