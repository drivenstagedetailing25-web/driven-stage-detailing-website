---
import Header from '../../components/preact/Header'
import Layout from '../../layouts/Layout.astro'
import { Image } from 'astro:assets'
import CheckMark from '../../assets/svg/check-mark.svg'
import Calendar from '../../assets/svg/calendar.svg'

const ceramicCoatingOptions = [
  {
    id: 1,
    title: 'Ceramic Coating Stage 1',
    price: '$600',
    duration: '6-8 hours',
    image: '/images/services/ceramic-coating.jpg',
    alt: 'Ceramic Coating Stage 1',
    badge: {
      text: 'Standard Protection',
      bgColor: 'bg-primary',
    },
    description:
      'Professional ceramic coating application with superior hydrophobic properties. Creates a protective barrier that enhances gloss and makes maintenance easier.',
    buttonText: 'Schedule Stage 1 Coating',
    borderClass: 'border border-zinc-200',
  },
  {
    id: 2,
    title: 'Ceramic Coating Stage 2',
    price: '$1200',
    duration: '12-14 hours',
    image: '/images/services/paint-correction.jpg',
    alt: 'Ceramic Coating Stage 2',
    badge: {
      text: 'Premium Protection',
      bgColor: 'bg-gradient-to-r from-yellow-400 to-orange-500',
      textColor: 'text-dark',
    },
    description:
      'Complete paint correction followed by premium ceramic coating application. Includes multi-stage polishing for maximum protection and enhanced durability.',
    buttonText: 'Schedule Stage 2 Coating',
    borderClass: 'border-2 border-primary',
  },
]
---

<Layout title='Ceramic Coating Service - Driven Stage Detailing'>
  <section class='first-section bg-gradient-secondary'>
    <div
      class='container mx-auto px-6 py-20 grid lg:grid-cols-2 gap-12 lg:gap-16 items-center'
    >
      <div
        class='text-center lg:text-left flex flex-col items-center lg:items-start'
      >
        <!-- Breadcrumb -->
        <nav
          class='flex items-center space-x-2 text-sm mb-10'
          aria-label='Breadcrumb'
        >
          <a
            href='/'
            class='text-foreground hover:text-accent transition-colors duration-200 flex items-center'
          >
            <svg
              xmlns='http://www.w3.org/2000/svg'
              width='24'
              height='24'
              viewBox='0 0 24 24'
              fill='none'
              stroke='currentColor'
              stroke-width='2'
              stroke-linecap='round'
              stroke-linejoin='round'
              class='icon mr-3 icon-tabler icons-tabler-outline icon-tabler-home'
              ><path stroke='none' d='M0 0h24v24H0z' fill='none'></path><path
                d='M5 12l-2 0l9 -9l9 9l-2 0'></path><path
                d='M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7'></path><path
                d='M9 21v-6a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v6'></path></svg
            >
            Home
          </a>
          <svg
            class='w-4 h-4 text-dark'
            fill='currentColor'
            viewBox='0 0 20 20'
          >
            <path
              fill-rule='evenodd'
              d='M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z'
              clip-rule='evenodd'></path>
          </svg>
          <a
            href='#'
            class='text-foreground hover:text-accent transition-colors duration-200'
            >Services</a
          >
          <svg
            class='w-4 h-4 text-dark'
            fill='currentColor'
            viewBox='0 0 20 20'
          >
            <path
              fill-rule='evenodd'
              d='M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z'
              clip-rule='evenodd'></path>
          </svg>
          <span class='text-gradient-accent font-medium'>Ceramic Coating</span>
        </nav>

        <h1
          class='text-4xl md:text-5xl lg:text-6xl font-bold font-barlow text-primary mb-6 leading-tight'
        >
          Ceramic <span class='text-gradient-primary'>Coating</span>
        </h1>
        <p class='text-foreground text-lg md:text-xl leading-relaxed mb-8'>
          Protect your vehicle's paint with our professional ceramic coating
          services. Advanced nanotechnology provides long-lasting protection,
          enhanced gloss, and hydrophobic properties for years of superior paint
          preservation.
        </p>
        <button type='button' id='schedule-btn' class='btn btn-primary btn-lg'>
          Schedule Service
          <Calendar class='ml-2 w-5 h-5' />
        </button>
      </div>

      <div class='relative overflow-hidden rounded-2xl shadow-2xl'>
        <Image
          width={800}
          height={600}
          src='/images/services/ceramic-coating.jpg'
          alt='Ceramic Coating Service'
          class='w-full h-[450px] object-cover'
        />
      </div>
    </div>
  </section>

  <!-- Ceramic Coating Options Section -->
  <section class='py-20 bg-white'>
    <div class='container mx-auto px-6'>
      <h2
        class='text-3xl md:text-4xl font-bold font-barlow text-center text-gradient-primary mb-4 h-12'
      >
        Choose Your Protection Level
      </h2>
      <p class='text-center text-foreground text-lg mb-16 max-w-3xl mx-auto'>
        Select the ceramic coating package that best suits your vehicle's needs
        and your protection requirements. All packages include professional
        application and warranty coverage.
      </p>

      <div class='grid lg:grid-cols-2 gap-8 max-w-5xl mx-auto'>
        {
          ceramicCoatingOptions.map((service) => (
            <article
              class={`bg-white rounded-2xl overflow-hidden group hover:shadow-xl transition-all duration-300 ${service.borderClass} relative`}
            >
              <div class='relative w-full h-64 overflow-hidden rounded-t-2xl'>
                <Image
                  class='w-full h-full object-cover group-hover:scale-110 transition-transform duration-300'
                  width={500}
                  height={300}
                  src={service.image}
                  alt={service.alt}
                  loading='lazy'
                />
                <div class='absolute inset-0 bg-gradient-to-t from-black/60 to-black/20' />
                <div class='absolute top-4 left-4'>
                  <span
                    class={`${service.badge.bgColor} ${service.badge.textColor || 'text-white'} px-3 py-1 rounded-full text-sm font-semibold`}
                  >
                    {service.badge.text}
                  </span>
                </div>
              </div>

              <div class='p-8'>
                <h3 class='text-2xl font-bold font-barlow text-foreground mb-4'>
                  {service.title}
                </h3>
                <div class='flex items-baseline mb-6'>
                  <span class='text-foreground/85'>From</span>
                  <span class='text-3xl font-bold text-gradient-accent ml-4'>
                    {service.price}
                  </span>
                  <span class='text-foreground/85 ml-2'>
                    / {service.duration}
                  </span>
                </div>

                <p class='text-foreground/90 leading-relaxed mb-8'>
                  {service.description}
                </p>

                <button
                  type='button'
                  class='schedule-btn w-full btn btn-primary btn-base'
                >
                  {service.buttonText}
                  <Calendar class='ml-2 w-4 h-4' />
                </button>
              </div>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section
    class='py-20 bg-dark bg-gradient-to-b from-primary/25 via-dark to-dark'
  >
    <div class='container mx-auto px-6 text-center'>
      <h2 class='text-3xl md:text-4xl font-bold font-barlow text-white mb-6'>
        Ready to <span class='text-gradient-primary'>Protect</span> Your Investment?
      </h2>
      <p class='text-muted text-lg mb-8 max-w-2xl mx-auto'>
        Secure your vehicle's paint with our professional ceramic coating
        services. Contact us today for a consultation and protect your
        investment for years to come.
      </p>
      <button
        type='button'
        id='schedule-btn-bottom'
        class='btn btn-primary btn-base mr-4'
      >
        Schedule Now
        <Calendar class='ml-2 w-5 h-5' />
      </button>
    </div>
  </section>
</Layout>

<!-- JavaScript for Modal (if needed for scheduling) -->
<script is:inline>
  document.addEventListener('DOMContentLoaded', function () {
    const scheduleBtn = document.getElementById('schedule-btn')
    const scheduleBtnBottom = document.getElementById('schedule-btn-bottom')

    // Add event listeners for service option buttons
    const serviceButtons = document.querySelectorAll('.schedule-btn')

    function handleScheduleClick() {
      // For now, just show an alert. You can integrate with the modal from mobile-detailing later
      alert('Ceramic coating scheduling will be available soon!')
    }

    if (scheduleBtn) scheduleBtn.addEventListener('click', handleScheduleClick)
    if (scheduleBtnBottom)
      scheduleBtnBottom.addEventListener('click', handleScheduleClick)

    serviceButtons.forEach((button) => {
      button.addEventListener('click', handleScheduleClick)
    })
  })
</script>
