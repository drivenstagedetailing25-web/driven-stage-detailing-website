<footer class='bg-dark text-muted pb-16'>
  <div class='container mx-auto px-6 border-t pt-16 border-t-foreground'>
    <div class='grid lg:grid-cols-4 md:grid-cols-2 gap-12'>
      <!-- Logo and Brand -->
      <div class='lg:col-span-1'>
        <div class='flex items-center space-x-3 mb-6'>
          <img
            src='/images/logo.png'
            alt='Driven Stage Detailing Logo'
            class='h-12 w-auto rounded-lg'
          />
          <div class='font-barlow'>
            <h3 class='text-lg text-white font-bold tracking-wider'>
              DRIVEN STAGE MOBILE
            </h3>
            <p class='text-gradient text-white text-base font-bold tracking-wider'>
              AUTO DETAILING
            </p>
          </div>
        </div>
        <p class='text-sm leading-relaxed'>
          Professional automotive detailing, tuning, and customization services.
          Transform your vehicle with our expert craftsmanship.
        </p>
        <p class='text-xs mt-6'>Â© 2025 Driven Stage Detailing</p>
      </div>

      <!-- Quick Links -->
      <div class='lg:ml-10'>
        <h4
          class='text-2xl font-barlow tracking-wider font-bold text-accent mb-6'
        >
          Quick Links
        </h4>
        <ul class='space-y-3'>
          {
            quickLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class='text-neutral-light transition-all duration-200 text-sm'
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h4
          class='text-2xl lg:ml-5 font-barlow tracking-wider font-bold text-accent mb-6'
        >
          Services
        </h4>
        <ul class='space-y-3'>
          {
            services.map((service) => (
              <li>
                <a
                  href={service.href}
                  class='text-neutral-light hover:text-gradient transition-all duration-200 text-sm'
                >
                  {service.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Connect -->
      <div>
        <h4
          class='text-2xl font-barlow tracking-wider font-bold text-accent mb-6'
        >
          Contact us
        </h4>

        <div class='space-y-4 mb-6'>
          {
            contactInfo.map((contact) => (
              <div>
                <a
                  href={contact.href}
                  class={`text-neutral-light hover:text-accent transition-colors duration-200 text-sm block ${contact.type === 'phone' ? 'font-medium' : ''}`}
                >
                  {contact.label}
                </a>
              </div>
            ))
          }
        </div>

        <!-- Social Media -->
        <div class='flex space-x-4'>
          {
            socialMedia.map((social) => (
              <a
                href={social.href}
                target='_blank'
                rel='noopener noreferrer'
                class='w-10 h-10 bg-primary hover:bg-secondary rounded-full flex items-center justify-center transition-all duration-300 hover:scale-110'
                aria-label={social.label}
              >
                <svg
                  class='w-5 h-5 text-white'
                  fill='currentColor'
                  viewBox='0 0 24 24'
                >
                  <path d={social.icon} />
                </svg>
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</footer>
