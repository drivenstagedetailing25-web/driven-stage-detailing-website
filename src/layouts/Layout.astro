---
import { CustomToaster } from '../components/react/CustomToaster'
import Footer from '../components/astro/Footer.astro'
import { ContactFormModal } from '../components/react/ContactFormModal'
import Header from '../components/react/Header'
import '../styles/global.css'
import fontBarlow400 from '/fonts/barlow-condensed/barlow-condensed-latin-400-normal.woff2?url'
import fontBarlow700 from '/fonts/barlow-condensed/barlow-condensed-latin-700-normal.woff2?url'

export interface Props {
  title?: string
  description?: string
}

const {
  title = 'Driven Stage Detailing - Taller de Tuning Profesional',
  description = 'Especialistas en tuning, detailing y modificaciones automotrices. Transforma tu vehículo con nuestros servicios profesionales.',
} = Astro.props

const isHome = Astro.url.pathname === '/'
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />

    <link
      rel='icon'
      type='image/png'
      href='/favicon/favicon-96x96.png'
      sizes='96x96'
    />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <link rel='shortcut icon' href='/favicon/favicon.ico' />
    <link
      rel='apple-touch-icon'
      sizes='180x180'
      href='/favicon/apple-touch-icon.png'
    />
    <meta name='apple-mobile-web-app-title' content='Driven Stage Detailing' />
    <link rel='manifest' href='/favicon/site.webmanifest' />

    <link rel="sitemap" href="/sitemap-index.xml" />

    <link
      rel='preload'
      as='font'
      type='font/woff2'
      href={fontBarlow400}
      crossorigin='anonymous'
    />
    <link
      rel='preload'
      as='font'
      type='font/woff2'
      href={fontBarlow700}
      crossorigin='anonymous'
    />

    <meta name='description' content={description} />
    <meta
      name='keywords'
      content='tuning, detailing, modificaciones automotrices, taller, personalización, performance'
    />

    <!-- Open Graph / Facebook -->
    <meta property='og:type' content='website' />
    <meta property='og:title' content={title} />
    <meta property='og:description' content={description} />

    <!-- Twitter -->
    <meta property='twitter:card' content='summary_large_image' />
    <meta property='twitter:title' content={title} />
    <meta property='twitter:description' content={description} />

    <title>{title}</title>
  </head>
  <body class='antialiased font-inter  overflow-x-hidden'>
    <Header client:load isHome={isHome} />
    <ContactFormModal client:load />
    <CustomToaster client:load />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }
</style>

<script>
  import { setupScrollAnimations } from '../lib/animate-on-scroll'

  if (typeof window !== 'undefined') {
    setupScrollAnimations()
  }
</script>
