---
import { CustomToaster } from '../components/react/CustomToaster'
import Footer from '../components/astro/Footer.astro'
import { ContactFormModal } from '../components/react/ContactFormModal'
import Header from '../components/react/Header'
import '../styles/global.css'
import fontBarlow400 from '/fonts/barlow-condensed/barlow-condensed-latin-400-normal.woff2?url'
import fontBarlow700 from '/fonts/barlow-condensed/barlow-condensed-latin-700-normal.woff2?url'

export interface Props {
  title?: string
  description?: string
  OgImage?: string
  keywords?: string
  canonical?: string
}

const {
  title = 'Driven Stage Detailing - Professional Mobile Auto Detailing Services',
  description = 'Professional mobile auto detailing services at your location. Premium paint correction, ceramic coating, and detailing with state-of-the-art equipment and certified technicians.',
  OgImage = '/og-image.webp',
  keywords = 'mobile auto detailing, paint correction, ceramic coating, car detailing, professional detailing, mobile car wash, auto care, vehicle protection, car cleaning services',
  canonical = Astro.url.href,
} = Astro.props

const isHome = Astro.url.pathname === '/'
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />

    <link
      rel='icon'
      type='image/png'
      href='/favicon/favicon-96x96.png'
      sizes='96x96'
    />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <link rel='shortcut icon' href='/favicon/favicon.ico' />
    <link
      rel='apple-touch-icon'
      sizes='180x180'
      href='/favicon/apple-touch-icon.png'
    />
    <meta name='apple-mobile-web-app-title' content='Driven Stage Detailing' />
    <link rel='manifest' href='/favicon/site.webmanifest' />

    <link rel="sitemap" href="/sitemap-index.xml" />

    <link
      rel='preload'
      as='font'
      type='font/woff2'
      href={fontBarlow400}
      crossorigin='anonymous'
    />
    <link
      rel='preload'
      as='font'
      type='font/woff2'
      href={fontBarlow700}
      crossorigin='anonymous'
    />

    <meta name='description' content={description} />
    <meta name='keywords' content={keywords} />
    <meta name='author' content='Driven Stage Detailing' />
    <meta name='robots' content='index, follow' />
    <link rel='canonical' href={canonical} />

    <!-- Open Graph / Facebook -->
    <meta property='og:type' content='website' />
    <meta property='og:url' content={canonical} />
    <meta property='og:title' content={title} />
    <meta property='og:description' content={description} />
    <meta property='og:image' content={new URL(OgImage, Astro.site).href} />
    <meta property='og:site_name' content='Driven Stage Detailing' />
    <meta property='og:locale' content='en_US' />
    <meta property="og:logo" content="/images/logo.webp" />

    <!-- Google Site Verification -->
    <meta name="google-site-verification" content="4R-zPwaO1S08cA4oP2iBgn_l6NL_dEaRXFwdsklwqeQ" />

    <!-- Twitter -->
    <meta name='twitter:card' content='summary_large_image' />
    <meta name='twitter:url' content={canonical} />
    <meta name='twitter:title' content={title} />
    <meta name='twitter:description' content={description} />
    <meta name='twitter:image' content={new URL(OgImage, Astro.site).href} />

    <title>{title}</title>
  </head>
  <body class='antialiased font-inter overflow-x-hidden'>
    <Header client:load isHome={isHome} />
    <ContactFormModal client:load />
    <CustomToaster client:load />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }
</style>

<script>
  import { setupScrollAnimations } from '../lib/animate-on-scroll'

  if (typeof window !== 'undefined') {
    setupScrollAnimations()
  }
</script>
